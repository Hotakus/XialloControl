{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xiallocontrol",
  "version": "0.18.2",
  "identifier": "com.hotakus.xiallocontrol",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": ""
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png"
    ],
    "windows": {
      "wix": {
        "language": ["zh-CN"]
      },
      "nsis": {
        "languages": ["English", "SimpChinese"],
        "displayLanguageSelector": true
      }
    }
  },

  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgzNENDRUFFRjFFRTQ2QjcKUldTM1J1N3hyczVNZytjZ0gzZTI0bHFBdEYwREZRRW9WMFNWVVEzYmNyOXhSdEZDdzRFQTVKbHgK",
      "endpoints": [
        "https://ghfast.top/https://github.com/Hotakus/XialloControl/releases/latest/download/latest.json",
        "https://github.com/Hotakus/XialloControl/releases/latest/download/latest.json"
      ]
    }
  }
}
